#!/bin/bash
echo 'ğŸ–¥  Creating Tmux Session'

tmux new -d -s dragon_dev
tmux set-option -t dragon_dev set-remain-on-exit on

if tmux has-session -t dragon_dev;
  then echo 'ğŸ–¥  Session Active  âœ…' && tmux send-keys -t dragon_dev '/home/pi/dragon_dev/start' Enter;
  else echo 'ğŸ–¥  No Session Found  âŒ';
fi
